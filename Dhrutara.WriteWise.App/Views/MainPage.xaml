<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:vm="clr-namespace:Dhrutara.WriteWise.App.ViewModels"
			 x:Class="Dhrutara.WriteWise.App.Views.MainPage"
			 x:DataType="vm:MainViewModel">

	<ScrollView>
		<VerticalStackLayout
			Spacing="25"
			Padding="30,0"
			VerticalOptions="Center">

			<Image
				Source="bird.png"
				SemanticProperties.Description="Cute dot net bot waving hi to you!"
				HeightRequest="200"
				HorizontalOptions="Center" />

			<Label
				Text="Hello, there!"
				SemanticProperties.HeadingLevel="Level1"
				FontSize="32"
				HorizontalOptions="Center" />

			<Label
				Text="Welcome to Write wise!"
				SemanticProperties.HeadingLevel="Level2"
				SemanticProperties.Description="Welcome to Write wise!"
				FontSize="18"
				HorizontalOptions="Center" />

			<Button
				Text="{Binding Message}"
				SemanticProperties.Hint="Signs in our out the user"
				Command="{Binding SignInOutClickedCommand}"
				HorizontalOptions="Center" />

		</VerticalStackLayout>
	</ScrollView>
</ContentPage>
